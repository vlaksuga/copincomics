<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/section_thumbnail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/transparent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/section_tag_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tag_wait"
        app:layout_constraintEnd_toEndOf="@+id/section_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/section_thumbnail"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/section_tag_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:src="@mipmap/tag_up"
        app:layout_constraintStart_toStartOf="@+id/section_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/section_thumbnail"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/section_tag_new"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/tag_new"
        app:layout_constraintStart_toStartOf="@+id/section_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/section_thumbnail"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/section_title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="       aaa"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/section_genre"
        app:layout_constraintEnd_toEndOf="@id/section_thumbnail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/section_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/section_thumbnail"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/section_genre"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="1dp"
        android:text="AAAAAA"
        android:textColor="#707070"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/section_thumbnail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/section_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/section_title" />

</androidx.constraintlayout.widget.ConstraintLayout>