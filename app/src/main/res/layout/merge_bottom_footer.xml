<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="#dedede"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="40dp">


        <ImageView
            android:id="@+id/footer_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/botton_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/footer_share_btns"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/footer_logo"
            app:layout_constraintTop_toBottomOf="@+id/footer_logo">


            <ImageView
                android:id="@+id/ic_ins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:src="@mipmap/icon_ins" />

            <ImageView
                android:id="@+id/ic_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:src="@mipmap/icon_f" />

            <ImageView
                android:id="@+id/ic_tw"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginHorizontal="5dp"
                android:src="@mipmap/icon_t" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/footer_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/footer_logo"
            app:layout_constraintTop_toBottomOf="@+id/footer_share_btns">

            <TextView
                android:id="@+id/footer_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosan"
                android:text="Help"
                android:textColor="#515151"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="|"
                android:textColor="#373737"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/footer_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosan"
                android:text="Notice"
                android:textColor="#575757"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="|"
                android:textColor="#373737"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/footer_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosan"
                android:text="Privacy"
                android:textColor="#575757"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="|"
                android:textColor="#373737"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/footer_terms"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:fontFamily="@font/notosan"
                android:text="Terms"
                android:textColor="#575757"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="|"
                android:textColor="#373737"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/footer_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosan"
                android:text="Copyright"
                android:textColor="#575757"
                android:textSize="11sp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Â© 2020 Copin comics / Contents First. All Rights Reserved."
            android:textColor="#707070"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="@id/footer_logo"
            app:layout_constraintTop_toBottomOf="@+id/footer_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>